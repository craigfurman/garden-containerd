#!/usr/bin/env bash
set -euo pipefail

log_dir=/var/vcap/sys/log/gdn
nerd_log=$log_dir/nerd.log
ctl_log=$log_dir/nerd_ctl.log

pid_dir=/var/vcap/sys/run/gdn
nerd_pid=$pid_dir/nerd.pid

mkdir -p "$log_dir" $pid_dir

log() {
  echo "$(date): $1" >> $ctl_log
}

case "$1" in
  start)
    # TODO needed?
    export PATH=/var/vcap/packages/btrfs-progs/bin:$PATH

    log "starting containerd..."
    echo $$ > $nerd_pid
    exec /var/vcap/packages/containerd/bin/containerd \
      >>$nerd_log 2>&1
    ;;

  stop)
    log "stopping containerd..."
    kill "$(cat $nerd_pid)"
    rm nerd_pid
    ;;

  *)
    log "invalid argument $1"
    ;;
esac
